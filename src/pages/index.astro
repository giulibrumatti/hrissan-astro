---
import AboutUs from "@/components/AboutUs.astro";
import Blog from "@/components/Blog.astro";
import Container from "@/components/elements/Container.astro";
import Services from "@/components/Services.astro";
import VideoCarousel from "@/components/video_section/VideoCarousel";
import { info } from "@/data/infoVideo";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Bienvenidos a HRissan">
  <main class="flex flex-col gap-y-20 md:gap-y-32 overflow-hidden">
    <Hero />
    <Container><VideoCarousel videos={info.videos} client:only /></Container>
    <AboutUs />
    <Services />
    <Blog />
  </main>
</Layout>
