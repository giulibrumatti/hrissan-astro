---
import Container from "./elements/Container.astro";
import FooterNav from "./elements/FooterNav.astro";
import GroupFooterNav from "./elements/GroupFooterNav.astro";
import Paragraph from "./elements/Paragraph.astro";
import TitleColor from "./elements/TitleColor.astro";
import Instragram from "./icons/Instragram.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import Mail from "./icons/Mail.astro";
import YouTube from "./icons/YouTube.astro";

import { basics, main } from "datos.json";
const { urlLinkedin, urlInstagram, urlYoutube, email, logo, image } = basics;

const recursosItem = main.find((item) => item.name === "Recursos");
const servicioItem = main.find((item) => item.name === "Servicio");
const contenidoItem = main.find((item) => item.name === "Contenido");

const recursos =
  recursosItem?.submain?.map((sub) => ({
    itemText: sub.text,
    itemLink: sub.url,
  })) || [];

const servicio =
  servicioItem?.submain?.map((sub) => ({
    itemText: sub.text,
    itemLink: sub.url,
  })) || [];

const contenido =
  contenidoItem?.submain?.map((sub) => ({
    itemText: sub.text,
    itemLink: sub.url,
  })) || [];

const footerNav3 = [
  {
    itemText: "Buenos Aires,",
    itemLink: "#",
  },
  {
    itemText: "Argentina",
    itemLink: "#",
  },
];
---

<div class="mt-8"></div>
<footer class="relative bg-gradient-to-tr from-gray-900 pt-28 rounded-t-3xl">
  <div class="absolute right-0 top-0 h-full w-full flex justify-end">
    <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
      <span
        class="absolute w-16 h-16 -top-1 -right-1 bg-red-500 rounded-md rotate-45"
      ></span>
      <span
        class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
      ></span>
      <span
        class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
      ></span>
    </div>
  </div>

  <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
    <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
      <span
        class="absolute w-16 h-16 -top-1 -right-1 bg-red-500 rounded-md rotate-45"
      ></span>
      <span
        class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
      ></span>
      <span
        class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
      ></span>
    </div>
  </div>
  <Container className="pb-8 relative overflow-auto">
    <span
      class="absolute top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 blur-2xl opacity-20 w-24 h-16 sm:w-48 sm:h-36 rounded-full rotate-12 skew-x-6 bg-primary"
    ></span>
    <div
      class="grid grid-cols-2 lg:grid-cols-3 lg:items-stretch gap-8 relative"
    >
      <div class="col-span-2 lg:col-span-1 h-auto flex flex-col">
        <div class="h-full">
          <TitleColor className="text-3xl font-bold"> Potenciando tu cambio </TitleColor>
          <Paragraph className={"mt-2"}>
            La tecnología está transformando HR: no sólo facilitando procesos,
            sino también creando nuevas oportunidades para la gestión del
            talento y la cultura organizacional. Te ayudamos a llevar HR al
            siguiente nivel a través del uso de la tecnología y los datos.
          </Paragraph>
        </div>
        <div class="min-h-max flex items-center gap-4 text-heading-3 mt-8">
          <a
            href={urlLinkedin}
            target="_blank"
            class="transition hover:text-heading-1 hover:scale-105"
          >
            <LinkedIn>
              <span class="sr-only">LinkedIn</span>
            </LinkedIn>
          </a>
          <a
            href={urlInstagram}
            target="_blank"
            class="transition hover:text-heading-1 hover:scale-105"
          >
            <Instragram>
              <span class="sr-only">Instagram</span>
            </Instragram>
          </a>
          <a
            href={urlYoutube}
            target="_blank"
            class="transition hover:text-heading-1 hover:scale-105"
          >
            <YouTube>
              <span class="sr-only">YouTube</span>
            </YouTube>
          </a>
          <a
            href={email}
            target="_blank"
            class="transition hover:text-heading-1 hover:scale-105"
          >
            <Mail>
              <span class="sr-only">Mail</span>
            </Mail>
          </a>
        </div>
      </div>

      <GroupFooterNav>
        <FooterNav title={"Servicio"} navItems={servicio} />
        <FooterNav title={"Recursos"} navItems={recursos} />
      </GroupFooterNav>

      <GroupFooterNav>
        <FooterNav title={"Contenido"} navItems={contenido} />
        <FooterNav title={"Ubicación"} navItems={footerNav3} />
      </GroupFooterNav>
    </div>
  </Container>
  <div class="bg-gradient-to-tl from-box-bg py-2 relative">
    <Container>
      <div
        class="flex justify-between items-center gap-6 md:text-lg text-heading-3"
      >
        <div>
          &copy; <span id="year"></span> HRissan.
        </div>
        <div>
          by <a
            href="https://cv-gbrumatti-web.vercel.app/"
            target="_blank"
            class="font-semibold">G. Brumatti</a
          >
        </div>
      </div>
    </Container>
  </div>
</footer>
